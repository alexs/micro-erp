<div class="well">

<%= form_for @job, :html => {:class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'input-xlarge' %>
    </div>
  </div>

  <div class="control-group" id="job_control_group">
    <%= f.label :status_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:status_id, { "Nuevo" => "1", "En proceso" => "2", "Finalizado" => "3"})%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :job_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select( :job_type_id, JobType .all.collect {|p| [ p.name , p.id ] } )%>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :sold, :class => 'control-label' %>
    <div class="controls">
      SÃ­<%= f.radio_button :sold, true %>
      No<%= f.radio_button :sold, false %>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.submit nil, :class => "btn btn-success btn-large" %>
  </div>
<% end %>
</div>