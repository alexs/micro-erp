  <legend>Proyectos/Servicios</legend>
  <table class="table table-condensed table-hover table-bordered table-striped">
  <thead>
    <tr>
      <th><%= sortable "id","#Ref" %></th>
      <th><%= sortable "name", "Nombre" %></th>
      <th><%= sortable "job_type_id", "Tipo" %></th>
      <th><%= sortable "status_id","Estado" %></th>
      <th><%= sortable "sold", "Vendido" %></th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.id %></td>
        <td><%= job.name %></td>
        <td><%= job.job_type.name unless job.job_type.nil? %></td>
        <td><%= job_status(job.status_id) %></td>
        <td><%= sold(job.sold) %></td>
        <td><%= link_to 'Detalles', job, :class => "btn btn-primary btn-small" %></td>
        <td><%= link_to 'Modificar', edit_job_path(job), :class => "btn btn-success btn-small" %></td>
        <td><%= link_to 'Eliminar', job, :confirm => 'Â¿Estas seguro?', :method => :delete, :class => "btn btn-danger btn-small" %></td>
       </tr>
    <% end %>
  </tbody>
</table>
      
<%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
