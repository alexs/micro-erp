<%- model_class = Expense -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:job_id) %></th>
      <th><%= model_class.human_attribute_name(:expense_category_id) %></th>
      <th><%= model_class.human_attribute_name(:expense_type_id) %></th>
      <th><%= model_class.human_attribute_name(:expense_code) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:invoice) %></th>
      <th><%= model_class.human_attribute_name(:subtotal) %></th>
      <th><%= model_class.human_attribute_name(:iva) %></th>
      <th><%= model_class.human_attribute_name(:total) %></th>
      <th><%= model_class.human_attribute_name(:usd_aop) %></th>
      <th><%= model_class.human_attribute_name(:file1) %></th>
      <th><%= model_class.human_attribute_name(:file2) %></th>
      <th><%= model_class.human_attribute_name(:file3) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= link_to expense.id, expense_path(expense) %></td>
        <td><%= expense.job_id %></td>
        <td><%= expense.expense_category_id %></td>
        <td><%= expense.expense_type_id %></td>
        <td><%= expense.expense_code %></td>
        <td><%= expense.date %></td>
        <td><%= expense.invoice %></td>
        <td><%= expense.subtotal %></td>
        <td><%= expense.iva %></td>
        <td><%= expense.total %></td>
        <td><%= expense.usd_aop %></td>
        <td><%= expense.file1 %></td>
        <td><%= expense.file2 %></td>
        <td><%= expense.file3 %></td>
        <td><%= expense.user_id %></td>
        <td><%=l expense.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_expense_path(expense), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      expense_path(expense),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_expense_path,
            :class => 'btn btn-primary' %>
