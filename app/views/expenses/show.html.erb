    <legend>Gasto</legend>


  <div class="well"> 
    <div class="dl-horizontal">
      <p><b>Fecha:  </b><%= l @expense.date, :format => :long %></p>
      <% if !@expense.refund.nil? %>
        <p><b>Comprobante de rembolso:  </b><%= @expense.refund.code  %></p>
      <% end %>
      <p><b>Proyecto/servicio:  </b><%= @expense.job.name if !@expense.job.nil? %></p>
      <p><b>Tipo:  </b><%= @expense.expense_category.name if !@expense.expense_category.nil?  %></p>
      <p><b>Concepto:  </b><%= @expense.expense_type.name if !@expense.expense_type.nil?  %> </p>
      <p><b>Ubicación:  </b> <%= @expense.location %></p>
      <p><b>Factura o núm de comprobante: </b> <%= @expense.expense_invoice %></p>
      <p><b>Subtotal: </b> <%= number_to_currency @expense.subtotal %></p>
      <p><b>Iva:</b> <%= number_to_currency @expense.iva %></p>
      <p><b>Total: </b> <%= number_to_currency(@expense.total) %></p>
      <p><b>USD AOP: </b> <%= number_to_currency @expense.usd_aop %></p>
      <p><b>Comprobante: </b> <%= @expense.file1 %></p
      <% if @expense.file2.size > 0 %>
        <p><b>Comprobante(archivo 2):</b> <%= @expense.file2 %></p>
      <% end %>
      <% if @expense.file3.size > 0 %>
        <p><b>Comprobante(archivo 3): </b> <%= @expense.file3 %></p>
      <% end %>
      <p><b>Notas: </b><%= @expense.desc %></p>   
    </div>
  </div>
<%= link_to 'Modificar', edit_expense_path(@expense), :class => "btn btn-success" %>
